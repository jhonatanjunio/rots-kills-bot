{
    "name": "rots-war-bot",
    "version": "1.0.0",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node src/index.ts",
        "start": "node dist/index.js",
        "watch": "tsc -w",
        "package": "npm run build && nexe dist/index.js -t windows-x64-14.15.3",
        "deploy-commands": "ts-node src/deploy-commands.ts"
    },
    "dependencies": {
        "@types/jest": "^29.5.14",
        "discord.js": "^14.x",
        "dotenv": "^16.4.5",
        "moment-timezone": "^0.5.46",
        "node-cron": "^3.x",
        "node-fetch": "2",
        "puppeteer": "^23.7.0",
        "puppeteer-core": "^23.7.0",
        "puppeteer-extra": "^3.3.6",
        "puppeteer-extra-plugin-stealth": "^2.11.2",
        "puppeteer-real-browser": "^1.3.17",
        "satori": "^0.11.3",
        "sharp": "^0.33.5",
        "ts-jest": "^29.2.5"
    },
    "devDependencies": {
        "@types/node": "^18.x",
        "@types/node-fetch": "^2.6.11",
        "jest": "^29.7.0",
        "nexe": "^4.0.0-rc.6",
        "nodemon": "^2.x",
        "pkg": "^5.8.1",
        "ts-node": "^10.x",
        "typescript": "^5.6.3"
    },
    "pkg": {
        "scripts": "dist/**/*.js",
        "assets": [
            "dist/**/*",
            "config/**/*"
        ],
        "targets": [
            "node16-win-x64"
        ],
        "outputPath": "executable"
    },
    "nexe": {
        "input": "dist/index.js",
        "output": "executable/bot.exe",
        "target": "windows-x64-14.15.3",
        "resources": [
            "config/**/*",
            "dist/**/*"
        ],
        "temp": "build",
        "clean": true
    }
}

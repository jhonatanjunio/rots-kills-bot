{
    "name": "rots-war-bot",
    "version": "1.0.0",
    "bin": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node src/index.ts",
        "start": "node dist/index.js",
        "watch": "tsc -w",
        "package": "npm run build && ts-node src/deploy-database.ts && pkg .",
        "package-only": "npm run build && pkg .",
        "deploy-commands": "ts-node src/deploy-commands.ts"
    },
    "dependencies": {
        "@logtail/node": "^0.5.2",
        "@logtail/types": "^0.5.2",
        "@napi-rs/canvas": "^0.1.60",
        "@types/jest": "^29.5.14",
        "discord.js": "^14.x",
        "dotenv": "^16.4.5",
        "moment-timezone": "^0.5.46",
        "node-cron": "^3.x",
        "node-fetch": "2",
        "puppeteer": "^23.7.0",
        "puppeteer-core": "^23.7.0",
        "puppeteer-extra": "^3.3.6",
        "puppeteer-extra-plugin-stealth": "^2.11.2",
        "puppeteer-real-browser": "^1.3.17",
        "ts-jest": "^29.2.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^18.x",
        "@types/node-fetch": "^2.6.11",
        "jest": "^29.7.0",
        "pkg": "^5.8.1",
        "ts-node": "^10.x",
        "typescript": "^5.6.3"
    },
    "pkg": {
        "scripts": "dist/**/*.js",
        "assets": [
            "dist/**/*",
            "config/**/*",
            "database/**/*",
            "assets/**/*",
            "node_modules/puppeteer-core/**/*",
            "node_modules/puppeteer-extra/**/*",
            "node_modules/puppeteer-extra-plugin/**/*",
            "node_modules/puppeteer-extra-plugin-stealth/**/*",
            "node_modules/puppeteer/**/*"
        ],
        "targets": [
            "latest-win-x64"
        ],
        "options": {
            "nodeVersion": "18",
            "esModule": true
        },
        "outputPath": "executable"
    }
}
